pipeline {
    agent any

    stages {
        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Build') {
            steps {
                sh 'npm run build'
            }
        }

        stage('Test') {
            steps {
                sh 'npm run test -- --ci --reporters=default --reporters=jest-junit'
            }
            post {
                always {
                    junit 'junit.xml'
                }
            }
        }

        // Verify Docker Access stage
        stage('Verify Docker Access') {
            steps {
                sh 'docker ps'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t medoubia/simple_angular_image:latest .'
            }
            post {
                success {
                    echo 'Docker image created successfully'
                }
                failure {
                    echo 'Docker image creation failed'
                }
            }
        }
    }

    post {
        success {
            archiveArtifacts artifacts: 'dist/**/*', fingerprint: true
            echo 'Build completed and artifacts archived successfully.'
        }
        failure {
            echo 'The pipeline failed. Please check the logs for details.'
        }
    }
}
