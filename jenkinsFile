pipeline {
    agent any
    environment {
        DOCKER_HOST = 'unix:///var/run/docker.sock'
    }
    stages {
        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }
        stage('Build') {
            steps {
                sh 'npm run build'
            }
        }
        stage('Test') {
            steps {
                sh 'npm run test -- --ci --reporters=default --reporters=jest-junit'
            }
            post {
                always {
                    junit 'junit.xml'
                }
            }
        }
        stage('Verify Docker Access') {
            steps {
                sh 'docker ps'
            }
        }
        stage('Build Docker Image') {
            steps {
                sh 'docker build -t medoubia/simple_angular_image:latest .'
            }
            post {
                success {
                    echo 'Docker image created successfully'
                }
                failure {
                    echo 'Docker image creation failed'
                }
            }
        }
        stage('push-image-to-hub'){
            steps{
                script{
                    withCredentials([string(credentialsId: 'docker-hub-pwdScret', variable: 'dockerhubpwd')]) {
                    sh 'docker login -u medoubia -p${dockerhubpwd}'
                    }

                    sh 'docker push medoubia/simple_angular_image'
                }
            }
        }
    }
    post {
        success {
            archiveArtifacts artifacts: 'dist/**/*', fingerprint: true
            echo 'Build completed and artifacts archived successfully.'
        }
        failure {
            echo 'The pipeline failed. Please check the logs for details.'
        }
    }
}
