pipeline{
    agent any

    stages{
        stage('Compile'){
            steps {
                // Use the full paths for npm and node commands
                sh 'sudo /home/medobia/.nvm/versions/node/v22.11.0/bin/npm install'
                sh 'sudo /home/medobia/.nvm/versions/node/v22.11.0/bin/npm run build'
            }
        }
    }


    post{
        success{
            archiveArtifacts artifacts: 'dist/**/*', fingerprint: true
        }
        failure{
            echo 'The Pipeline failed. Please check the logs for details.'
        }
    }
}