pipeline {
    agent any

    stages {
        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }
        stage('Build') {
            steps {
                sh 'npm run build'
            }
        }

        stage('Test'){
            steps{
                sh 'npm run test -- --ci --reporters=default --reporters=jest-junit'
                
            }
            post {
                always {
                    junit 'junit.xml'
                }
            }
        }
        stage('Build-docker-Image'){
            steps{
                sh 'docker build -t medoubia/simple_angular_Image:latest .'
            }
            post{
                success{
                    echo 'Docker imgae created successfully'
                }
                failure{
                    echo 'Docker image createion failed'
                }
            }
        }
    }

    post {
        success {
            archiveArtifacts artifacts: 'dist/**/*', fingerprint: true
            echo 'Build completed and artifacts archived successfully.'
        }
        failure {
            echo 'The pipeline failed. Please check the logs for details.'
        }
    }
}
